# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tabs

[*.{py,rst}]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
end_of_line = LF
